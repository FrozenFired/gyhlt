.row.py-2.text-center.border
	.col-4
		h3.code #{din.dateCd}#{din.code}
		.note #{din.note}
		.time
			span 询价时间: 
			span #{moment(din.dinAt).format('DD/MM/YYYY HH:mm:ss')}
	.col-4
		if din.cter
			- cter = din.cter;
			.cter 客户: #{cter.nome} [#{cter.code}]
		else
			div 数据丢失
		.din 
			span 销售员:
			if din.diner
				- diner = din.diner;
				span #{diner.nome} [ #{diner.code} ]
			else
				span 数据丢失
			


	.col-4
		- let stsBg = 'bg-default';
		if din.status == Conf.status.init.num
			- stsBg = 'bg-secondary';
		else if din.status == Conf.status.done.num
			- stsBg = 'bg-info';
		else if din.status == Conf.status.ord.num
			- stsBg = 'bg-success';
		else if din.status == Conf.status.unord.num
			- stsBg = 'bg-danger';
		.status(class=stsBg)
			- let status = '';
			each sts in Conf.status
				- status = '';
				if sts.num == din.status
					- status = sts.val;
					- break;
			span 状态: #{status}


.row.py-2.text-center.border
	.col-4
		.excel.mt-3
			a.btn.btn-info.btn-block(href="/bsDinExcel/"+din._id) Excel
	.col-4
	.col-4
		if din.status == Conf.status.init.num
			-a;
			.statusChange.text-left.mt-2
				if dinpds && dinpds.length > 0
					- a;
					button.btn.btn-warning.changeStsAjax(id="changeStsAjax-"+din._id+"-quoting", type="button", data-url="/usOrdinStatusAjax", data-id=din._id, data-stsf=din.status, data-stst=Conf.status.quoting.num) 提交

			.edit.text-right
				a.btn.btn-info(href="/bsQunGenDin?inquotId="+din.inquot+'&ordinId='+din._id) 订单商品
				span &nbsp;
				a.btn.btn-warning(href="/bsDinUp/"+din._id) <span class="oi oi-pencil"></span>
		else if din.status == Conf.status.done.num
			-a;
			.statusChange.mt-2
				button.btn.btn-danger.changeStsAjax(id="changeStsAjax-"+din._id+"-unord", type="button", data-url="/usOrdinStatusAjax", data-id=din._id, data-stsf=din.status, data-stst=Conf.status.unord.num, title="客户不需要") 历史