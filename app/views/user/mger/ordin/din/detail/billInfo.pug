.border.border-dark.mt-2.p-3
	.row
		.col-6 总价值: #{(din.dinImp).toFixed(2)}
		.col-6 已收款: #{(din.billPr).toFixed(2)}
	.row
		.col-6
			h5.code 付款信息:
		.col-6.text-right
			button.btn.btn-warning#billAddPageShow(type="button") + 付款账单
	//- 添加产品
	#billAddPage.border.border-dark(style="display:none")
		form#billForm(method="post", action="/mgBillNew", enctype="multipart/form-data")
			input(type="hidden", name="obj[ordin]", value=din._id)
			input(type="hidden", name="obj[genre]", value=1)

			.row.my-3
				.col-md-2.mt-3.text-right 数量:
				.col-md-2.mt-3
					input.form-control#billPrIpt(type="text", name="obj[billPr]", autocomplete="off", placeholder="收到钱数")
			.row.my-3
				.col-md-2.mt-3.text-right 备注:
				.col-md-10.mt-3
					input.form-control#noteIpt(type="text", name="obj[note]", autocomplete="off", placeholder="首款备注")


			.form-group.row
				.col-12.text-right
					button.border.border-danger.mr-4.btn.btn-default.text-danger#billsPageShow(type="button") 取消
					input.btn.btn-success(type="submit", value="确认添加")
	each bill in din.bills
		-a;
		.row.mt-3
			.col-3 付款时间 #{moment(bill.crtAt).format("YYYY年MM月DD日")}
			.col-3 付款金额 #{(bill.billPr).toFixed(2)}
			.col-3 #{bill.note}
			.col-3
				a(href="/mgBillDel/"+bill._id) 删除

script(src="/js/user/mger/din/detail/billInfo.js")