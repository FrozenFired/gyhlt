- let quantTotal = len = 0;
- let qntPrImp = dinPrImp = 0;
.row.mt-3
	.col-sm-6
		.quantTotal
			span 总条目: 
			span #{qutpds.length}
	.col-sm-6.text-right
		.quantTotal
			span 总数量: 
			span#span-quantTotal
table.mt-3.table.table-bordered
	thead.thead-light
		th 品牌
		th 系列
		th 产品规格
		th 工艺面料
		th.qntPrTd(style="width:10%; display:") 平台报价
		th(style="width:18%") 客户成交价
	thead
		tr
			td.text-right(colspan=4) 总价值:
			td.qntPrTd.bg-dark.text-white(style="display:")
				h5
					span#span-qntPrImp
					span &nbsp;€
			td
				h5.text-info
					span#span-dinPrImp
					span &nbsp;€
		each qutpd in qutpds
			- len++;
			tr.text-info(id="tr-compdid-"+qutpd._id)
				td
					.number
						span.text-dark.border.p-1 N. #{len}
					.brandnome.mt-4
						if qutpd.brand
							- brand = qutpd.brand;
							span [#{brand.nome}]
						else
							span #{qutpd.brandNome}

					if qutpd.area
						-a;
						.pdarea.mt-3
							span.text-dark 区域: 
							span #{qutpd.area}
				td
					.pdnome
						span.text-dark 品类: 
						span #{qutpd.pdNome}
					if qutpd.pdfir
						- pdfir = qutpd.pdfir;
						.pdfircode.mt-3
							span.text-dark 系列名: 
							span [#{pdfir.code}]
					else
						- let firNome = '产品系列名称';
						if qutpd.firNome
							- firNome = qutpd.firNome;
						.firnome.mt-3
							span.text-dark 系列名: 
							span #{firNome}
					.photo.mt-3
						- let photo = "/imgs/createPicture.jpg";
						if qutpd.photo
							- photo = qutpd.photo;
							img(src=photo, width="120px")
							.picLink
								a(href=photo, target="_blank") <span class="oi oi-zoom-in"></span>
						else if qutpd.pdfir
							- photo = qutpd.pdfir.photo;
							img(src=photo, width="120px")
							.picLink
								a(href=photo, target="_blank") <span class="oi oi-zoom-in"></span>
						else
							img(src=photo, width="120px")
				td
					if qutpd.pdsec
						- pdsec = qutpd.pdsec;
						.pdseccode
							span.text-dark 产品编码: 
							span [#{pdsec.code}]
						.pdsecspec.mt-3
							span.text-dark 产品尺寸: 
							span [#{pdsec.spec}]
					else
						.pdseccode
							span.text-dark 产品编码: 
							span #{qutpd.secNome}
						.pdsecspec.mt-3
							span.text-dark 产品尺寸: 
							span #{qutpd.specf}

					.sketch.mt-3
						- let sketch = "/imgs/createPicture.jpg";
						if qutpd.sketch
							- sketch = qutpd.sketch;
							img#sketchCrt(src=sketch, width="120px")
							.picLink
								a(href=sketch, target="_blank") <span class="oi oi-zoom-in"></span>
						else if qutpd.pdsec
							-a;
							- sketch = qutpd.pdsec.photo;
							img#sketchCrt(src=sketch, width="120px")
							.picLink
								a(href=sketch, target="_blank") <span class="oi oi-zoom-in"></span>
						else
							img#sketchCrt(src=sketch, width="120px")
				td
					- let pdthdcode = '查找数据库';
					if qutpd.pdthd
						- pdthdcode = '['+qutpd.pdthd.code+']';
					.pdthdcode #{pdthdcode}
					.pdmater.mt-3 #{qutpd.mater}
					.pdcraft.mt-3 #{qutpd.craft}
					.images
						- let subsp = -1;
						each image in qutpd.images
							- subsp++;
							if image && image.length > 5
								-a;
								img.mt-2(src=image, width="120px")
								.picLink
									a(href=image, target="_blank") <span class="oi oi-zoom-in"></span>
				td.qntPrTd.bg-dark(style="display:")
					if qutpd.qntpdSts != Conf.status.del.num
						- let qntPrtot = qutpd.quant * qutpd.qntPr;
						- qntPrImp += qntPrtot;
						.dutPr.mt-3.text-white
							span 采购单价:
							br
							span #{qutpd.dutPr}
							input(id="org-dutPr-"+qutpd._id, type="hidden", value=qutpd.dutPr)
						.qntPr.mt-3.text-white
							.qntPr
								span 报价单价:
								br
								span #{qutpd.qntPr}
								input(id="org-qntPr-"+qutpd._id, type="hidden", value=qutpd.qntPr)
							.qntPrTot.mt-2
								span 总价:
								br
								span(id="span-qntPrtot-"+qutpd._id) #{qntPrtot}
				td
					if qutpd.qntpdSts != Conf.status.del.num
						- quantTotal += qutpd.quant;
						if !isNaN(parseFloat(dinPrImp))
							-a;
							if qutpd.dinPr && !isNaN(parseFloat(qutpd.dinPr))
								- dinPrImp += qutpd.quant * qutpd.dinPr;
							else
								- dinPrImp = "未完成销售价";
						.quant
							span.text-dark 数量: 
							span.text-warning.quantClickup(id="span-quant-"+qutpd._id) #{qutpd.quant}
							input(id="org-quant-"+qutpd._id, type="hidden", value=qutpd.quant)
							form(id="form-quant-"+qutpd._id, action="/slQunpdUpdAjax", style="display:none")
								input(type="hidden", name="obj[_id]", value=qutpd._id)
								.form-group.row
									.col-12
										input.quantBlurup.form-control(id="ipt-quant-"+qutpd._id, type="number", name="obj[quant]", placeholder="采购数量", autocomplete="off", value=qutpd.quant)
							.text-danger(id="opt-quant-"+qutpd._id)


						.dinPr.mt-3
							span.text-dark 单价: 
							if qutpd.dinPr
								-a;
								span.text-warning.dinPrClickup(id="span-dinPr-"+qutpd._id) #{qutpd.dinPr}
							else
								span.text-warning.dinPrClickup(id="span-dinPr-"+qutpd._id) 填写售价
							input(id="org-dinPr-"+qutpd._id, type="hidden", value=qutpd.dinPr)
							form(id="form-dinPr-"+qutpd._id, action="/slQunpdUpdAjax", style="display:none")
								input(type="hidden", name="obj[_id]", value=qutpd._id)
								.form-group.row
									.col-12
										input.dinPrBlurup.form-control(id="ipt-dinPr-"+qutpd._id, type="text", name="obj[dinPr]", placeholder="采购价格", autocomplete="off", value=qutpd.dinPr)
							.text-danger(id="opt-dinPr-"+qutpd._id)
							strong
								span.text-dark 总价: 
								span(id="span-dinPrtot-"+qutpd._id) #{qutpd.quant * qutpd.dinPr}
					else
						.del.text-danger
							div.text-center 删除原因:
							.delNote.mt-2 #{qutpd.delNote}
.hideImp
	input#ipt-quantTotal(type="hidden", value=quantTotal)
	input#ipt-qntPrImp(type="hidden", value=qntPrImp)
	input#ipt-dinPrImp(type="hidden", value=dinPrImp)

