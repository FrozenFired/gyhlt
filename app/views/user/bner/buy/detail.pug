extends ../../aalayout/layout

block content
	.container
		.title
			.row
				.col-12 
					a(href="/bner") Home
					span &nbsp; | &nbsp;
					a(href="/bnBuys") 供应商折扣
					span &nbsp; | &nbsp;
					span #{buy.nome}
			hr
		.update.text-right
			a.btn.btn-warning(href="/bnBuyUp/"+buy._id) 更新
		.discount.border.p-2.mt-3.row.text-center
			.col-12
				if buy.brand
					- brand = buy.brand;
					h3.nome #{brand.nome}
			.col-12
				if buy.strmup
					- strmup = buy.strmup;
					h3.nome #{strmup.nome}
			.col-12
				h3 #{buy.discount}
				p #{buy.note}