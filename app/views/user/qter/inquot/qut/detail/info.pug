.border.border-dark.p-3
	.row.text-center
		.col-md-6
			h5.code 报价单号: #{qut.code}

			.time
				span 询价时间: 
				span #{moment(qut.qntcrtAt).format('YYYY年MM月DD日')}
			.qut 
				span 询价人:
				if qut.quner
					- quner = qut.quner;
					span #{quner.nome} [ #{quner.code} ]
				else
					span 数据丢失
		.col-md-6
			.quter
				span 报价人:
				if qut.quter
					- quter = qut.quter;
					span #{quter.nome} [ #{quter.code} ]
				else
					span.text-warning 未分配
			if qut.status == Conf.status.done.num
				-a;
				h4 
					span 总价格: 
					span.text-info #{qut.qntPr} €
			.status.mt-3
				- var status = '';
				each sts in Conf.status
					- status = '';
					if sts.num == qut.status
						- status = sts.val;
						- break;
				span.p-2.text-danger 状态: #{status}
			.excel.text-right
				a(href="/slQunExcel/"+qut._id) Excel <span class="oi oi-data-transfer-download"></span>
	if qut.status == Conf.status.quoting.num
			- a;
			.statusChange.text-right.mt-2
				if qut.compds.length > 0
					-a;
					button.btn.btn-warning.changeStsAjax.quotingBtn(id="changeStsAjax-"+qut._id+"-done", type="button", data-url="/usInquotStatusAjax", data-id=qut._id, data-stsf=qut.status, data-stst=Conf.status.pricing.num, style="display:none") [初步报价] 完成
script(src="/js/user/ajaxChange/status.js")
script(src="/js/user/qter/qut/detail/basicUp.js")