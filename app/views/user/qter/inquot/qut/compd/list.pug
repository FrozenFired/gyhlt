table.mt-3.table.table-bordered
	thead.thead-light
		th 品牌
		th 系列
		th 产品规格
		th 工艺面料
		th(style="width:10%") 备注
		th 数量价格
	thead
		- let estTot = 0;
		- let qntTot = 0;
		each qutpd in qutpds
			-a;
			tr.text-info
				td
					if qutpd.brand
						- brand = qutpd.brand;
						.brandnome [#{brand.nome}]
					else
						.brandnome #{qutpd.brandNome}

					if qutpd.area
						-a;
						.pdarea.mt-3
							span.text-dark 区域: 
							span #{qutpd.area}

					if qut.status == Conf.status.quoting.num
							a-;
							a.btn.border-warning.text-warning.mt-5(href="/qtQutpdUp/"+qutpd._id) 更改商品
				td
					.pdnome
						span.text-dark 品类: 
						span #{qutpd.pdNome}
					if qutpd.pdfir
						- pdfir = qutpd.pdfir;
						.pdfircode.mt-3
							span.text-dark 系列名: 
							span [#{pdfir.code}]
					else
						- let firNome = '产品系列名称';
						if qutpd.firNome
							- firNome = qutpd.firNome;
						.firnome.mt-3
							span.text-dark 系列名: 
							span #{firNome}
					.photo.mt-3
						- let photo = "/imgs/createPicture.jpg";
						if qutpd.photo
							- photo = qutpd.photo;
							img(src=photo, width="120px")
							form(method="post", action="/qtQutpdDelPic", enctype="multipart/form-data")
								input(type="hidden", name="compdId", value=qutpd._id)
								input(type="hidden", name="picField", value="photo")
								button.btn.btn-link.text-danger(type="submit") <span class="oi oi-trash"></span>
								a(href=photo, target="_blank") <span class="oi oi-zoom-in"></span>
						else if qutpd.pdfir
							- photo = qutpd.pdfir.photo;
							img(src=photo, width="120px")
							.picLink
								a(href=photo, target="_blank") <span class="oi oi-zoom-in"></span>
						else
							img(src=photo, width="120px")
				td
					if qutpd.pdsec
						- pdsec = qutpd.pdsec;
						.pdseccode
							span.text-dark 产品编码: 
							span [#{pdsec.code}]
						.pdsecspec.mt-3
							span.text-dark 产品尺寸: 
							span [#{pdsec.spec}]
					else
						.pdseccode
							span.text-dark 产品编码: 
							span #{qutpd.secNome}
						.pdsecspec.mt-3
							span.text-dark 产品尺寸: 
							span #{qutpd.specf}

					.sketch.mt-3
						- let sketch = "/imgs/createPicture.jpg";
						if qutpd.sketch
							- sketch = qutpd.sketch;
							img#sketchCrt(src=sketch, width="120px")
							form(method="post", action="/qtQutpdDelPic", enctype="multipart/form-data")
								input(type="hidden", name="compdId", value=qutpd._id)
								input(type="hidden", name="picField", value="sketch")
								button.btn.btn-link.text-danger(type="submit") <span class="oi oi-trash"></span>
								a(href=sketch, target="_blank") <span class="oi oi-zoom-in"></span>
						else if qutpd.pdsec
							-a;
							- sketch = qutpd.pdsec.photo;
							img#sketchCrt(src=sketch, width="120px")
							.picLink
								a(href=sketch, target="_blank") <span class="oi oi-zoom-in"></span>
						else
							img#sketchCrt(src=sketch, width="120px")
				td
					- let pdthdcode = '查找数据库';
					if qutpd.pdthd
						- pdthdcode = '['+qutpd.pdthd.code+']';
						.pdthdPrice.text-dark [原价: #{qutpd.pdthd.price}]
					.pdthdcode #{pdthdcode}
					.pdmater.mt-3 #{qutpd.mater}
					.pdcraft.mt-3 #{qutpd.craft}
					.images
						- let subsp = -1;
						each image in qutpd.images
							- subsp++;
							if image && image.length > 5
								-a;
								img.mt-2(src=image, width="120px")
								form(method="post", action="/qtQutpdDelPic", enctype="multipart/form-data")
									input(type="hidden", name="compdId", value=qutpd._id)
									input(type="hidden", name="picField", value="images")
									input(type="hidden", name="subsp", value=subsp)
									button.btn.btn-link.text-danger(type="submit") <span class="oi oi-trash"></span>
									a(href=image, target="_blank") <span class="oi oi-zoom-in"></span>
				td
					span #{qutpd.note}
				td
					.quant
						span.text-dark 数量: 
						span #{qutpd.quant}

					- let estimate = '未预估';
					if qutpd.estimate
						- estimate += parseFloat(qutpd.estimate);
						if !isNaN(estTot)
						- estimate = qutpd.estimate;
					else
						- estTot = '未预估';
					.price.mt-3
						span.text-dark 预估单价:
						if qutpd.estimate
							- a;
							span #{qutpd.estimate}
						else
							span.text-dark  未预估

					h5.total.mt-2
						if qut.status == Conf.status.quoting.num
							-a;
							span.text-dark 预估总价:
							if qutpd.estimate
								- a;
								span #{qutpd.estimate * qutpd.quant}
							else
								span.text-dark  未预估
						else
							span.text-dark 总价:
							if qutpd.qntPr
								- qntPr = qutpd.qntPr;
								span #{qutpd.qntPr * qutpd.quant}
							else
								span.text-dark  未报价

					.qutpdSts.mt-5
						- let status = '';
						each sts in Conf.status
							- status = '';
							if sts.num == qutpd.qntpdSts
								- status = sts.val;
								- break;
						span.text-dark 商品状态: 
						if qut.status > Conf.status.init.num
							-a;
							span.text-danger #{status}
						else
							span.text-danger 创建中
						input.statusInput(type="hidden", value=qutpd.qntpdSts)