.qutpds.mt-5
	each qutpd in qutpds
		- let stsBg = 'bg-default';
		if qutpd.qntpdSts == Conf.status.done.num
			- stsBg = 'bg-success';
		else if qutpd.qntpdSts == Conf.status.del.num
			- stsBg = 'bg-danger';
		- let status = '';
		each sts in Conf.status
			- status = '';
			if sts.num == qutpd.qntpdSts
				- status = sts.val;
				- break;
		.row.py-2.mt-2.text-center.border.qutpdCard
			.col-4.col-md-2.mt-2(class="qutpd-"+qutpd._id)
				if qutpd.brand
					- brand = qutpd.brand;
					div [#{brand.nome}]
				else
					.text-muted #{qutpd.brandNome}
				if qut.status == Conf.status.quoting.num
					-a;
					a.btn.btn-info.mt-5(href="/qtQutpd/"+qutpd._id) 查看详情
			.col-4.col-md-2.mt-2
				if qutpd.pdfir
					- pdfir = qutpd.pdfir;
					div [#{pdfir.code}]
					img(src=pdfir.photo, width="100%")
				else
					- let firNome = '产品系列名称';
					if qutpd.firNome
						- firNome = qutpd.firNome;
					.text-muted #{firNome}
					- let photo = "/imgs/createPicture.jpg";
					if qutpd.photo
						- photo = qutpd.photo;
					img#photoCrt(src=photo, width="100%")
					form#photoForm(style="display:none", method="post", action="/qtQutpdImg", enctype="multipart/form-data")
						input(type="hidden", name="obj[_id]", value=qutpd._id)
						input(type="hidden", name="picDir", value=Conf.picPath.compd)
						input(type="hidden", name="obj[picOld]", value=photo)
						input(type="hidden", name="picName", value=crUser.firm.code+'_'+qut.nome)
						input(type="hidden", name="obj[photo]", value=1)
						.form-group.udPhoto.row(style="display:none")
							.col-12
								label.col-form-label(for="photoUpload") pdImg
								input#photoUpload.btn.btn-info.btn-block(type="file", name="picUpload")
						.form-group.row
							.col-4
								a.btn.btn-secondary(href="/qtQut/"+qut._id) 取消
							.col-8.text-right
								input.btn.btn-info(type="submit" value="更改图片")
			.col-4.col-md-2.mt-2
				if qutpd.pdsec
					- pdsec = qutpd.pdsec;
					div [#{pdsec.code}]
					div [#{pdsec.spec}]
					img(src=pdsec.photo, width="100%")
				else
					- let secNome = '产品设计图';
					if qutpd.secNome
						- secNome = qutpd.secNome;
					.text-muted #{secNome}
					- let sketch = "/imgs/createPicture.jpg";
					if qutpd.sketch
						- sketch = qutpd.sketch;
					img#sketchCrt(src=sketch, width="100%")
					form#sketchForm(style="display:none", method="post", action="/qtQutpdImg", enctype="multipart/form-data")
						input(type="hidden", name="obj[_id]", value=qutpd._id)
						input(type="hidden", name="picDir", value=Conf.picPath.compd)
						input(type="hidden", name="obj[picOld]", value=sketch)
						input(type="hidden", name="picName", value=crUser.firm.code+'_'+qut.nome)
						input(type="hidden", name="obj[sketch]", value=1)
						.form-group.udPhoto.row(style="display:none")
							.col-12
								label.col-form-label(for="sketchUpload") pdImg
								input#sketchUpload.btn.btn-info.btn-block(type="file", name="picUpload")
						.form-group.row
							.col-4
								a.btn.btn-secondary(href="/qtQut/"+qut._id) 取消
							.col-8.text-right
								input.btn.btn-info(type="submit" value="更改图片")
			.col-4.col-md-2.mt-2
				if qutpd.pdthd
					- pdthd = qutpd.pdthd;
					div 
						span [#{pdthd.code}] &nbsp;
						span.text-info #{pdthd.price} €
					each mater in qutpd.pdthd.maters
						-a;
						.text-dark.mt-2 #{mater}
				else
					.text-muted #{qutpd.thdNome}
			.col-4.col-md-2.mt-2
				-let compd = qutpd;
				include ../../aaElement/compdQPU
			.col-4.col-md-2.mt-2
				.quter.my-3
					div 报价人: 
					if qutpd.quter
						- quter = qutpd.quter;
						div #{quter.nome} [#{quter.code}]
					else
						div.text-warning 未分配
				div(class=stsBg) 商品状态: #{status}
				input.statusInput(type="hidden", value=qutpd.qntpdSts)