extends ../../../aalayout/layout

block content
	.container
		.title
			.row
				.col-9 
					a(href="/") Home
					span &nbsp; | &nbsp;
					a(href="/slQun/"+qunpd.inquot._id) 询价单
					span &nbsp; | &nbsp;
					span 询价产品
				.col-3.text-right
					a.btn.btn-warning(href="/slQunpdUp/"+qunpd._id) 更新
			hr
		.info
			- let qun = qunpd.inquot;
			- let nomeBg = 'bg-default';
			if qunpd.qntpdSts == Conf.status.done.num
				- nomeBg = 'bg-success';
			else if qunpd.qntpdSts == Conf.status.del.num
				- nomeBg = 'bg-danger';
			- let status = '';
			each sts in Conf.status
				- status = '';
				if sts.num == qunpd.qntpdSts
					- status = sts.val;
					- break;
			.row.py-2.mt-2.text-center.border.qunpdCard
				.col-4.col-md-2.mt-2
					if qunpd.brand
						- brand = qunpd.brand;
						div [#{brand.nome}]
					else
						.text-muted #{qunpd.brandNome}
				.col-4.col-md-2.mt-2
					if qunpd.pdfir
						- pdfir = qunpd.pdfir;
						div [#{pdfir.code}]
						a(href=pdfir.photo, target="_blank")
							img(src=pdfir.photo, width="100%")
					else
						- let firNome = '产品系列名称';
						if qunpd.firNome
							- firNome = qunpd.firNome;
						.text-muted #{firNome}
						- let photo = "/imgs/createPicture.jpg";
						if qunpd.photo
							- photo = qunpd.photo;
						a(href=photo, target="_blank")
							img#photoCrt(src=photo, width="100%")
				.col-4.col-md-2.mt-2
					if qunpd.pdsec
						- pdsec = qunpd.pdsec;
						div [#{pdsec.code}]
						div [#{pdsec.spec}]
						a(href=pdsec.photo, target="_blank")
							img(src=pdsec.photo, width="100%")
					else
						- let secNome = '产品设计图';
						if qunpd.secNome
							- secNome = qunpd.secNome;
						.text-muted #{secNome}
						- let sketch = "/imgs/createPicture.jpg";
						if qunpd.sketch
							- sketch = qunpd.sketch;
						a(href=sketch, target="_blank")
							img#sketchCrt(src=sketch, width="100%")
				.col-4.col-md-2.mt-2
					if qunpd.pdthd
						- pdthd = qunpd.pdthd;
						div [#{pdthd.code}]
						each mater in qunpd.pdthd.maters
							-a;
							.text-dark.mt-2 #{mater}
					else
						.text-muted #{qunpd.thdNome}
				.col-4.col-md-2.mt-2
					.quant 数量: #{qunpd.quant}

					if qunpd.price
						- price = qunpd.price;
						.price 单价: #{qunpd.price}
					else
						.price.text-warning  未报价
					- let total = qunpd.quant * qunpd.price;
					if !isNaN(total)
						- total;
						h5.total.text-info 总价: #{total}
				.col-4.col-md-2.mt-2
					if qun.status > Conf.status.init.num
						-a;
						div(class=nomeBg) #{status}
