			.row
				.col-9.text-muted.mt-2: h5
					a(href="/cter") Home
					span &nbsp; | &nbsp;
					span product List
				.col-3.text-right
					button.btn.btn-light#searchTog(type="button") <span class="oi oi-align-right"></span>
			.bg-white.input-group.py-3.my-3#searchElem(style="display:none")
